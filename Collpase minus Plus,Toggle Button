    <!--Toggle Button --CSS>
     .outerDivFull { margin:-7px; } 
  
  .switchToggle input[type=checkbox]{height: 0; width: 0; visibility: hidden; position: absolute; }
  .switchToggle input:checked + label, .switchToggle input:checked + input + label  {background:#F07A6E; }
  .switchToggle label {cursor: pointer; text-indent: -9999px; width: 97px; max-width: 88px; height: 30px; background:green; display: block; border-radius: 100px; position: relative; }
  .switchToggle label:before {content: ''; position: absolute; top: 2px; left: 2px; width: 26px; height: 26px; background: #fff; border-radius: 90px; transition: 0.3s; }
  
  .switchToggle input:checked + label:after, .switchToggle input:checked + input + label:after {content: 'UDW'; position: absolute; top: 5px; left: 10px; width: 20px; height: 26px; border-radius: 90px; transition: 0.3s; text-indent: 0; color: #fff; }
  .switchToggle input + label:after, .switchToggle input + input + label:after{content: 'SLDC'; position: absolute; top: 5px; left: 35px; width: 35px; height: 26px; border-radius: 90px; transition: 0.3s; text-indent: 0; color: #fff; }
  
  .switchToggle input:checked + label:before, .switchToggle input:checked + input + label:before{left: calc(100% - 2px); transform: translateX(-100%); }
  .switchToggle label:active:before {width: 60px; } 
